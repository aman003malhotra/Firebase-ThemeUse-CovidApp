    <div class="page-wrapper">
        <div class="content">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <label style="text-align: center;"><h2>Add Appointment </h2></label>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <form action="/add-appointment" method="POST">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><h4>Appointment ID</h4></label>
                                    <input class="form-control" type="text" value="APT-0001" name="apptID" >
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><h4>Patient Name</h4></label>
                                    <input class="form-control" type="Name" name="patientName" >
                                </div>
                            </div>
                        </div>
                      <div class="col-md-6">
                                <div class="form-group">
                                    <label  for="doctors"><h4>Doctor</h4></label>
                                    <select class="form-control" id="doctor" name="doctor">
                                        <option value="Dr. Cheong Chee Kin">Dr. Cheong Chee Kin</option>
                                        <option value="Dr. Suresh">Dr. Suresh</option>
                                        <option value="Dr. Ahmad Ali">Dr. Ahmad Ali</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><h4>Date</h4></label>
                                    <div class="cal-icon">
                                        <input type="text" class="form-control datetimepicker" name="date">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><h4>Time</h4></label>
                                    <div class="time-icon">
                                        <input type="text" class="form-control" id="datetimepicker3" name="time">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><h4>Patient Email</h4></label>
                                    <input class="form-control" type="email" name="patientEmail">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label><h4>Patient Phone Number</h4></label>
                                    <input class="form-control" type="text" name="patientContact">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label><h4>Message</h4></label>
                            <textarea cols="30" rows="4" class="form-control" name="Message"></textarea>
                        </div>
                        
                        <div class="m-t-20 text-center">
                            <input type="Submit" class="btn btn-primary submit-btn" value="Create Appointment">
                        </div>
                    </form>
                </div>
            </div>
        </div>
           
